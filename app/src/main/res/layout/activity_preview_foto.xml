<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".PreviewFotoActivity"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal"
        >



        <ImageView
            android:layout_alignParentTop="true"
            android:id="@+id/imageFoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/base_gray"
            />

        <TextView
            android:layout_alignStart="@+id/imageFoto"
            android:layout_alignTop="@+id/imageFoto"
            android:id="@+id/textNama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nama_foto"
            android:layout_gravity="top"
            android:fontFamily="@font/lato_regular"
            android:textSize="14sp"
            android:padding="5dp"
            android:background="@color/base_red"
            android:textColor="@color/base_white"
            />

        <android.widget.Button
            android:id="@+id/btn_KirimFoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageFoto"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_button"
            android:fontFamily="@font/lato_bold"
            android:text="@string/kirim_foto"
            android:textAllCaps="false"
            android:textColor="@color/base_white"
            android:textSize="16sp" />

    </RelativeLayout>

</ScrollView>